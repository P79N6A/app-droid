<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/activity_comment_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/background_dialog">

        <ImageView
            android:id="@+id/activity_comment_imageView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/activity_img_1"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/activity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/activity_comment_imageView"
            android:text="小提琴兴趣班报名开始啦！"
            android:textSize="18sp"
            android:padding="8dp"
            android:textColor="#333333"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_name"
            android:textColor="#999999"
            android:text="2018-7-17至2018-8-17"
            android:textSize="16sp"
            android:paddingStart="8dp"
            android:paddingBottom="8dp"
            android:id="@+id/activity_time" />
    </RelativeLayout>


</LinearLayout>