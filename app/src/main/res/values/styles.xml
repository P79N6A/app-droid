<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtomMenuImgv">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="ButtomMenuTv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@drawable/ic_menu_textcolors_selector</item>
    </style>

    <style name="ButtomMenuItemLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TextView_15sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxEms">8</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:layout_marginStart">5dp</item>
    </style>

    <style name="TextView_15sp_Gray">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxEms">10</item>
        <item name="android:textColor">@color/bg_line_light_gray</item>
        <item name="android:layout_marginStart">5dp</item>
    </style>

    <style name="TextView_18sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="TextView_18sp_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#333333</item>
    </style>
    <style name="TextView_13sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/bg_line_light_gray</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="Table_text_style">
        <item name="android:textSize">18sp</item>
    </style>

</resources>
