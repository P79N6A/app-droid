<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.TabLayout
            android:id="@+id/course_child_second_tablayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="18sp"
            app:tabIndicatorColor="#339ef8"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="#666666"
            app:tabTextAppearance="@style/Table_text_style"
            app:tabTextColor="#666666" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.1dp"
            android:background="#e6eaf2" />

        <com.runtoinfo.youxiao.common_ui.CustomViewPager
            android:id="@+id/course_child_second_viewpager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</layout>