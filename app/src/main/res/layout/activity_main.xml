<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="text"
            type="String"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/home_head_layou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:fitsSystemWindows="true"/>

        <com.runtoinfo.youxiao.globalTools.views.ViewPager
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/main_view_pager"
            android:layout_gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e6eaf2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/ll_bottomMenu_chat"
                style="@style/ButtomMenuItemLayout" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/imgv_bottomMenu_chat"
                        style="@style/ButtomMenuImgv"
                        android:src="@drawable/ic_menu_chat_selector"
                        android:contentDescription="@string/app_name" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_bottomMenu_chat"
                        style="@style/ButtomMenuTv"
                        android:text="首页" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bottomMenu_addressBook"
                style="@style/ButtomMenuItemLayout" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/imgv_bottomMenu_addressbook"
                        style="@style/ButtomMenuImgv"
                        android:src="@drawable/ic_menu_addressbook_selector"
                        android:contentDescription="@string/app_name" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_bottomMenu_addressbook"
                        style="@style/ButtomMenuTv"
                        android:text="精选课" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bottomMenu_discovery"
                style="@style/ButtomMenuItemLayout" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/imgv_bottomMenu_discovery"
                        style="@style/ButtomMenuImgv"
                        android:src="@drawable/ic_menu_discovery_selector"
                        android:contentDescription="@string/app_name" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_bottomMenu_discovery"
                        style="@style/ButtomMenuTv"
                        android:text="专题"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bottomMenu_me"
                style="@style/ButtomMenuItemLayout" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/imgv_bottomMenu_me"
                        style="@style/ButtomMenuImgv"
                        android:src="@drawable/ic_menu_me_selector"
                        android:contentDescription="@string/app_name" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/tv_bottomMenu_me"
                        style="@style/ButtomMenuTv"
                        android:text="我的" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</layout>