<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="40dp"
                        android:background="@drawable/boutique_course_down_image" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="160dp"
                        android:layout_gravity="bottom"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/boutique_course_banner" />
                </FrameLayout>

                <android.support.design.widget.TabLayout
                    android:id="@+id/boutique_course_child_tablayout"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:tabIndicatorHeight="0dp"
                    android:layout_marginTop="10dp"
                    app:tabBackground="@android:color/transparent"
                    app:tabMode="scrollable"
                    app:tabSelectedTextColor="#339ef8"
                    app:tabTextAppearance="@style/Table_text_style"
                    app:tabTextColor="#666666" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="5dp"
                    android:background="#f5f5f5" />

                <com.runtoinfo.youxiao.common_ui.views.CustomViewPager
                    android:id="@+id/boutique_music_child_viewpager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

    </LinearLayout>
</layout>