<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.runtoinfo.youxiao.globalTools.views.RoundImagView
            android:id="@+id/record_course_img"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            app:type="round"
            android:scaleType="centerCrop"
            android:layout_alignBottom="@+id/record_course_data_layout"
            android:layout_alignTop="@+id/record_course_data_layout"
            android:src="@drawable/boutique_recycler_2"/>

        <LinearLayout
            android:id="@+id/record_course_data_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/record_course_img"
            android:orientation="vertical">

            <TextView
                android:id="@+id/record_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="小提琴进阶课程高手弹奏"
                android:textColor="#333333"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/record_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="#999999"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/record_collection_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="#999999"
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/delete_collection"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="@android:color/holo_red_dark"
        android:gravity="center"
        android:text="删除"
        android:textColor="#fff"
        android:textSize="16sp" />

</LinearLayout>