<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="15dp">

    <com.runtoinfo.youxiao.globalTools.views.RoundImagView
        android:id="@+id/record_course_img"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/record_course_data_layout"
        android:layout_alignTop="@+id/record_course_data_layout"
        android:background="@drawable/default_image"
        android:scaleType="fitXY"
        app:type="round"/>

    <LinearLayout
        android:id="@+id/record_course_data_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/record_course_img"
        android:orientation="vertical">

        <TextView
            android:id="@+id/record_course_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小提琴进阶课程高手弹奏健身"
            android:maxWidth="240dp"
            android:textColor="#333333"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="教师:"
                android:textColor="#999999"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/record_course_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textColor="#999999"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/record_course_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginStart="5dp"
                android:textColor="#999999"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#999999"
                android:layout_marginStart="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:textSize="14sp"
                android:id="@+id/record_course_leave"
                android:layout_marginStart="5dp"/>
        </LinearLayout>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#999999"
            android:text="2天前"
            android:drawablePadding="8dp"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/record_course_time"
            android:id="@+id/record_course_update_time"/>
    </LinearLayout>
</RelativeLayout>