<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_dialog_cancel">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_message"
        android:textSize="18sp"
        android:textColor="#333333"
        android:text="确定退出当前账号？"
        android:layout_gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:gravity="center"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:background="#ededed"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/cancel_exit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="点错啦"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/view"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="#666666"/>

        <View
            android:id="@+id/view"
            android:layout_width="0.5dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@+id/cancel_exit"
            android:layout_alignBottom="@+id/cancel_exit"
            android:background="#ededed"/>

        <TextView
            android:id="@+id/exit_now"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="继续"
            android:layout_toEndOf="@+id/view"
            android:layout_alignParentEnd="true"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="#3aa6fe"/>
    </RelativeLayout>
</LinearLayout>