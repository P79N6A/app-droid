<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/hand_word_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/activity_img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/activity_black_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="交作业"
                android:textColor="#333333"
                android:textSize="18sp" />
        </RelativeLayout>

        <EditText
            android:id="@+id/course_hand_work_nots"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:background="@drawable/background_edittext"
            android:gravity="start"
            android:hint="您有什么想说的..."
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:textSize="15sp"
            android:focusable="true"
            android:focusableInTouchMode="true"/>


        <TextView
            android:id="@+id/course_add_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/course_take_photo"
            android:gravity="center"
            android:text="照片/视频/音频"
            android:textColor="#999999"
            android:textSize="15sp"
            android:visibility="gone"/>

        <GridView
            android:id="@+id/course_homework_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numColumns="3"
            android:columnWidth="90dp"
            android:layout_margin="20dp"
            android:visibility="gone"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_unlimited"
            android:layout_marginTop="10dp" />


        <TextView
            android:id="@+id/course_home_work_commit_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/background_button_blue"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="提交"
            android:textColor="#fff"
            android:textSize="15sp" />
    </LinearLayout>
</layout>