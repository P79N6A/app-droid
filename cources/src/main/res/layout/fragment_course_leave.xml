<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f7f7f7">

        <RelativeLayout
            android:id="@+id/leave_bar_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#fff">

            <ImageView
                android:id="@+id/course_leave_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/activity_black_back"
                android:contentDescription="@string/app_name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="请假"
                android:textColor="#333333"
                android:textSize="20sp" />
        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.1dp"
            android:background="#cccccc" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginTop="18dp"
            android:background="#fff">

            <TextView
                style="@style/TextView_18sp_title"
                android:layout_centerVertical="true"
                android:text="选择理由" />

            <TextView
                android:id="@+id/course_leave_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/course_leave_next"
                android:text="选择"
                android:textSize="18sp" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="18dp"
            android:padding="20dp"
            android:background="#fff">

        <TextView
            style="@style/TextView_18sp_title"
            android:text="请假理由" />

        <EditText
            android:id="@+id/course_leave_comment"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:focusable="false"
            android:padding="10dp"
            android:textColor="#999999"
            android:textSize="18sp"
            android:inputType="text"
            android:labelFor="@+id/course_leave_comment"/>

        </LinearLayout>

        <TextView
            android:id="@+id/course_commit_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:background="@drawable/background_button_blue"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="提交"
            android:textColor="#fff"
            android:textSize="15sp" />

    </LinearLayout>
</layout>